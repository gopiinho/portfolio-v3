---
interface Props {
  title: string
  description: string
  stack?: string[]
  visitLink: string
  githubLink?: string
  demoLink?: string
  listItems?: string[]
}

const {
  title,
  description,
  stack,
  visitLink,
  githubLink,
  demoLink,
  listItems = [],
}: Props = Astro.props
---

<div
  class='gap-3 grid hover:bg-card duration-300 text-base lg:px-2 py-3 rounded-lg'
>
  <span>
    #
    <a
      href={visitLink}
      target='_blank'
      rel='noopener'
      class='text-xl font-medium underline'>{title}</a
    ></span
  >
  <div class='grid gap-3 lg:px-2'>
    <p>
      {description}
    </p>
    <div class='flex gap-2 flex-wrap items-center'>
      {
        stack?.map((item, index) => (
          <>
            <span class='border-[0.5px] border-black/20 rounded-lg py-1 px-2 text-sm'>
              {item}
            </span>
            {index < stack.length - 1 && <span>•</span>}
          </>
        ))
      }
    </div>
    <div class='grid gap-1 py-2'>
      <div class='space-y-1 text-[15px]'>
        {
          listItems.map((item) => (
            <div class='flex'>
              <span class='mr-2 mt-0 flex-shrink-0'>•</span>
              <span class='flex-1'>{item}</span>
            </div>
          ))
        }
      </div>
    </div>
    <div class='flex gap-3'>
      <a href={visitLink} target='_blank' rel='noopener' class='underline'
        >visit</a
      >
      {
        githubLink && (
          <a href={githubLink} target='_blank' rel='noopener' class='underline'>
            github
          </a>
        )
      }
      {
        demoLink && (
          <a href={demoLink} target='_blank' rel='noopener' class='underline'>
            demo
          </a>
        )
      }
    </div>
  </div>
</div>
